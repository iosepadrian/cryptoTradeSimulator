<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:background="@color/white">
    <androidx.cardview.widget.CardView
        android:id="@+id/subCategoryCardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="10dp"
        android:background="@color/white"
        android:padding="3dp"
        android:elevation="8dp"
        app:cardElevation="8dp"
        >
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@color/white"
            >
            <TextView
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:id="@+id/subcategoryname"
                android:textColor="@color/black"
                android:text="Item Range"
                android:textSize="17dp"
                android:textStyle="bold"
                android:layout_marginRight="120dp"
                android:padding="12sp"
                app:layout_goneMarginLeft="5dp"
                ></TextView>
            <TextView
                app:layout_constraintTop_toBottomOf="@id/subcategoryname"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginLeft="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/subcategorydescription"
                android:textColor="@color/black"
                android:text="Item Description"
                android:textSize="17dp"
                android:padding="12sp"

                app:layout_goneMarginLeft="5dp"
                android:layout_marginRight="120dp"
                ></TextView>
            <ImageView
                android:id="@+id/subcategoryimage"
                android:layout_width="100dp"
                android:layout_height="100dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                ></ImageView>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>