<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:background="@color/white">
    <androidx.cardview.widget.CardView
        android:id="@+id/subCategoryCardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@color/white"
        android:padding="3dp"
        android:elevation="3dp"
        app:cardElevation="3dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        app:cardCornerRadius="10dp"
        >
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:orientation="horizontal"
            android:background="@color/white"
            >
            <TextView
                app:layout_constraintTop_toTopOf="@id/subcategoryimage"
                app:layout_constraintBottom_toTopOf="@id/subcategorydescription"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:id="@+id/subcategoryname"
                android:textColor="@color/black"
                android:text="Item Range"
                android:textSize="17dp"
                android:textStyle="bold"
                android:layout_marginRight="120dp"
                app:layout_goneMarginLeft="5dp"
                ></TextView>
            <TextView
                app:layout_constraintTop_toBottomOf="@id/subcategoryname"
                app:layout_constraintBottom_toTopOf="@id/subcategory_progressbar"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginLeft="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/subcategorydescription"
                android:textColor="@color/black"
                android:text="Item Description"
                android:textSize="17dp"

                app:layout_goneMarginLeft="5dp"
                android:layout_marginRight="120dp"
                ></TextView>
            <ImageView
                android:id="@+id/subcategoryimage"
                android:layout_width="70dp"
                android:layout_height="70dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginRight="10dp"
                ></ImageView>
            <ProgressBar
                android:id="@+id/subcategory_progressbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                style="@android:style/Widget.DeviceDefault.ProgressBar.Horizontal"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@id/subcategoryimage"
                app:layout_constraintTop_toBottomOf="@id/subcategorydescription"
                android:progress="0"
                android:layout_marginRight="90dp"
                android:layout_marginLeft="5dp"
                ></ProgressBar>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>